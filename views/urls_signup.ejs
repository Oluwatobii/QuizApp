              <input required="required" type="email" name="email" placeholder="Email" class="form-control" id="inputEmail" />
            </div>
            <div class="form-group col-md-6">
              <label for="inputPassword4">Password</label>
              <input required="required" type="password" name="password" placeholder="Enter password" class="form-control" id="inputPassword4" />
            </div>
          </div>
          <button type="submit" class="btn btn-primary">Register</button>
        </form>
        <div class='signup'><p class="signup">Already have an account?<a href="/users/login"> Login in here!</a></p></div>
