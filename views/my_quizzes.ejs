  <!-- Google fonts  -->
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;700&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;700&display=swap" rel="stylesheet">
  <!-- Iconify Link  -->
  <script src="https://code.iconify.design/1/1.0.7/iconify.min.js"></script>
  <!-- JQuery  -->
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <title>QuizApp</title>
  <!-- Stylesheeets  -->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/QuizApp/styles/layout.scss" type="text/scss" />
  <!-- Javascript  -->
  <script type="text/javascript" src="/scripts/public_private.js"></script>

</head>

<body>
  <!-- Navbar  -->
  <%- include('partials/_header') %>

  <div class="big-container">
    <div class="row">
      <div class="col-3 profile">
        <div id="avatar-div"><span id="avatar" class="iconify" data-icon="bi:person-bounding-box" data-inline="false"></span></div>
        <div><span class="profile-name"> Welcome <%= person %></span> </div>
        <div class="my_quizzes_btn">
           <div><a href="/users/myQuizzes/<%= userId %>"><button type="button" button
                class="btn btn-danger btn-rounded">My Created Quizzes</button></a></div>
          <div><a href="/users/myCompletedQuizzes"><button type="button" class="btn btn-info btn-rounded">My Completed Quizzes</button></a></div>
        </div>
      </div>
      <div class="col-9" class='main-container'>
        <span class="quiz-top"><h3>List of quizzes created by me</h3></span>
        <span>
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Quiz</th>
                <th scope="col">Created On</th>
                <th scope="col">Quiz Private</th>
                <th scope="col">Quiz Visible</th>
                <th scope="col">Share the Quiz</th>
              </tr>
            </thead>
            <tbody>
              <% for(let quiz in myQuizzes) { %>
                <tr>
                  <td class='quiz_id' type="hidden"> <%= myQuizzes[quiz].quiz%></td>
                  <!-- I NEED THIS -->
                  <td> <%= myQuizzes[quiz].created.toDateString() %> </td>
                  <td>
                    <form class='private-form' action="/quizzes/private" method="POST" >
                      <input name="quiz_id" class='quiz_id hidden'value="<%=myQuizzes[quiz].quiz_id%>" type="hidden">
                      <button type="submit" class="btn btn-primary">Make Private</button>
                    </form>
                  </td>
                  <td>
                    <form class='public-form' action="/quizzes/public" method="POST" >
                      <input name="quiz_id" class='quiz_id hidden'value="<%=myQuizzes[quiz].quiz_id%>" type="hidden">
                      <button type="submit" class="btn btn-primary">Make Public</button>
                    </form>
                    </td>
                    <td><a href="mailto:?Subject=Try out this awesome quiz&amp;Body=Hi%20there,%20try%20out%20this%20awesome%20quiz!%20 http://localhost:8080/users/quizzes/<%= myQuizzes[quiz].quiz_id%>">
                      <img src="https://simplesharebuttons.com/images/somacro/email.png" alt="Email" />
                  </a></td>
                  </tr>
                <% } %>
            </tbody>
          </table>
        </span>
      </div>
    </div>
    <!-- </div>
  </section> -->
  <script
  src="https://code.jquery.com/jquery-3.5.1.min.js"
  integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
  crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
      integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
      crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
      integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI"
      crossorigin="anonymous"></script>
</body>

</html>



